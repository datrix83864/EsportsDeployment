<?xml version="1.0" encoding="utf-8"?>
<!-- 
Unattended Windows 11 Installation
High School Esports LAN Infrastructure
Generated from config.yaml
-->
<unattend xmlns="urn:schemas-microsoft-com:unattend">
    <!-- Windows PE (Installation Phase) -->
    <settings pass="windowsPE">
        <component name="Microsoft-Windows-International-Core-WinPE" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
            <SetupUILanguage>
                <UILanguage>en-US</UILanguage>
            </SetupUILanguage>
            <InputLocale>en-US</InputLocale>
            <SystemLocale>en-US</SystemLocale>
            <UILanguage>en-US</UILanguage>
            <UserLocale>en-US</UserLocale>
        </component>
        
        <!-- Disk Configuration -->
        <component name="Microsoft-Windows-Setup" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
            <DiskConfiguration>
                <Disk wcm:action="add">
                    <CreatePartitions>
                        <!-- EFI System Partition -->
                        <CreatePartition wcm:action="add">
                            <Order>1</Order>
                            <Type>EFI</Type>
                            <Size>100</Size>
                        </CreatePartition>
                        <!-- Microsoft Reserved Partition -->
                        <CreatePartition wcm:action="add">
                            <Order>2</Order>
                            <Type>MSR</Type>
                            <Size>16</Size>
                        </CreatePartition>
                        <!-- Windows C: partition (250GB) -->
                        <CreatePartition wcm:action="add">
                            <Order>3</Order>
                            <Type>Primary</Type>
                            <Size>256000</Size>
                        </CreatePartition>
                        <!-- Games G: partition (rest of disk ~1.7TB) -->
                        <CreatePartition wcm:action="add">
                            <Order>4</Order>
                            <Type>Primary</Type>
                            <Extend>true</Extend>
                        </CreatePartition>
                    </CreatePartitions>
                    <ModifyPartitions>
                        <ModifyPartition wcm:action="add">
                            <Order>1</Order>
                            <PartitionID>1</PartitionID>
                            <Label>System</Label>
                            <Format>FAT32</Format>
                        </ModifyPartition>
                        <ModifyPartition wcm:action="add">
                            <Order>2</Order>
                            <PartitionID>2</PartitionID>
                        </ModifyPartition>
                        <ModifyPartition wcm:action="add">
                            <Order>3</Order>
                            <PartitionID>3</PartitionID>
                            <Label>Windows</Label>
                            <Letter>C</Letter>
                            <Format>NTFS</Format>
                        </ModifyPartition>
                        <ModifyPartition wcm:action="add">
                            <Order>4</Order>
                            <PartitionID>4</PartitionID>
                            <Label>Games</Label>
                            <Letter>G</Letter>
                            <Format>NTFS</Format>
                        </ModifyPartition>
                    </ModifyPartitions>
                    <DiskID>0</DiskID>
                    <WillWipeDisk>true</WillWipeDisk>
                </Disk>
            </DiskConfiguration>
            
            <!-- Image Selection -->
            <ImageInstall>
                <OSImage>
                    <InstallTo>
                        <DiskID>0</DiskID>
                        <PartitionID>3</PartitionID>
                    </InstallTo>
                    <InstallToAvailablePartition>false</InstallToAvailablePartition>
                </OSImage>
            </ImageInstall>
            
            <!-- User Data -->
            <UserData>
                <AcceptEula>true</AcceptEula>
                <FullName>{{ organization.name }}</FullName>
                <Organization>{{ organization.name }}</Organization>
                <!-- Product Key (leave empty for evaluation or KMS) -->
                <ProductKey>
                    <Key></Key>
                    <WillShowUI>OnError</WillShowUI>
                </ProductKey>
            </UserData>
        </component>
    </settings>
    
    <!-- Specialize Phase -->
    <settings pass="specialize">
        <!-- Computer Name -->
        <component name="Microsoft-Windows-Shell-Setup" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
            <ComputerName>{{ windows.computer_name_prefix | default('ESPORTS') }}-BUILD</ComputerName>
            <TimeZone>{{ windows.timezone | default('Eastern Standard Time') }}</TimeZone>
        </component>
        
        <!-- Network Configuration -->
        <component name="Microsoft-Windows-TCPIP" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
            <Interfaces>
                <Interface wcm:action="add">
                    <Ipv4Settings>
                        <DhcpEnabled>true</DhcpEnabled>
                    </Ipv4Settings>
                    <Identifier>Ethernet</Identifier>
                </Interface>
            </Interfaces>
        </component>
        
        <!-- DNS Client -->
        <component name="Microsoft-Windows-DNS-Client" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
            <DNSSuffixSearchOrder>
                <DomainName wcm:action="add" wcm:keyValue="1">{{ organization.short_name | lower }}.lan</DomainName>
            </DNSSuffixSearchOrder>
            <Interfaces>
                <Interface wcm:action="add">
                    <DNSServerSearchOrder>
                        <IpAddress wcm:action="add" wcm:keyValue="1">{{ network.lancache_server_ip }}</IpAddress>
                        <IpAddress wcm:action="add" wcm:keyValue="2">{{ network.dns_primary }}</IpAddress>
                    </DNSServerSearchOrder>
                    <Identifier>Ethernet</Identifier>
                </Interface>
            </Interfaces>
        </component>
    </settings>
    
    <!-- OOBE System Phase -->
    <settings pass="oobeSystem">
        <!-- User Accounts -->
        <component name="Microsoft-Windows-Shell-Setup" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
            <!-- Admin Account -->
            <UserAccounts>
                <AdministratorPassword>
                    <Value>{{ windows.admin_password | default('ChangeMe123!') }}</Value>
                    <PlainText>false</PlainText>
                </AdministratorPassword>
                <LocalAccounts>
                    <!-- Build user (for setup only) -->
                    <LocalAccount wcm:action="add">
                        <Password>
                            <Value>{{ windows.admin_password | default('ChangeMe123!') }}</Value>
                            <PlainText>false</PlainText>
                        </Password>
                        <Description>Build Administrator</Description>
                        <DisplayName>Build Admin</DisplayName>
                        <Group>Administrators</Group>
                        <Name>buildadmin</Name>
                    </LocalAccount>
                </LocalAccounts>
            </UserAccounts>
            
            <!-- Auto Logon (for build process only) -->
            <AutoLogon>
                <Password>
                    <Value>{{ windows.admin_password | default('ChangeMe123!') }}</Value>
                    <PlainText>false</PlainText>
                </Password>
                <Enabled>true</Enabled>
                <Username>buildadmin</Username>
            </AutoLogon>
            
            <!-- OOBE Settings -->
            <OOBE>
                <HideEULAPage>true</HideEULAPage>
                <HideOEMRegistrationScreen>true</HideOEMRegistrationScreen>
                <HideOnlineAccountScreens>true</HideOnlineAccountScreens>
                <HideWirelessSetupInOOBE>true</HideWirelessSetupInOOBE>
                <NetworkLocation>Work</NetworkLocation>
                <ProtectYourPC>3</ProtectYourPC>
                <SkipUserOOBE>true</SkipUserOOBE>
                <SkipMachineOOBE>true</SkipMachineOOBE>
            </OOBE>
            
            <!-- First Logon Commands -->
            <FirstLogonCommands>
                <!-- Disable Windows Defender (for performance) -->
                <SynchronousCommand wcm:action="add">
                    <Order>1</Order>
                    <CommandLine>powershell.exe -Command "Set-MpPreference -DisableRealtimeMonitoring $true"</CommandLine>
                    <Description>Disable Windows Defender</Description>
                </SynchronousCommand>
                
                <!-- Set Power Plan -->
                <SynchronousCommand wcm:action="add">
                    <Order>2</Order>
                    <CommandLine>powercfg /setactive 8c5e7fda-e8bf-4a96-9a85-a6e23a8c635c</CommandLine>
                    <Description>Set High Performance Power Plan</Description>
                </SynchronousCommand>
                
                <!-- Create game directories on G: -->
                <SynchronousCommand wcm:action="add">
                    <Order>3</Order>
                    <CommandLine>cmd.exe /c mkdir G:\SteamLibrary</CommandLine>
                </SynchronousCommand>
                <SynchronousCommand wcm:action="add">
                    <Order>4</Order>
                    <CommandLine>cmd.exe /c mkdir G:\EpicGames</CommandLine>
                </SynchronousCommand>
                <SynchronousCommand wcm:action="add">
                    <Order>5</Order>
                    <CommandLine>cmd.exe /c mkdir G:\RiotGames</CommandLine>
                </SynchronousCommand>
                <SynchronousCommand wcm:action="add">
                    <Order>6</Order>
                    <CommandLine>cmd.exe /c mkdir G:\UserData</CommandLine>
                </SynchronousCommand>
                
                <!-- Run setup scripts (will be placed on C: during build) -->
                <SynchronousCommand wcm:action="add">
                    <Order>10</Order>
                    <CommandLine>powershell.exe -ExecutionPolicy Bypass -File C:\Setup\optimize.ps1</CommandLine>
                    <Description>Run optimization script</Description>
                </SynchronousCommand>
                <SynchronousCommand wcm:action="add">
                    <Order>11</Order>
                    <CommandLine>powershell.exe -ExecutionPolicy Bypass -File C:\Setup\install_apps.ps1</CommandLine>
                    <Description>Install applications</Description>
                </SynchronousCommand>
                <SynchronousCommand wcm:action="add">
                    <Order>12</Order>
                    <CommandLine>powershell.exe -ExecutionPolicy Bypass -File C:\Setup\configure_profiles.ps1</CommandLine>
                    <Description>Configure roaming profiles</Description>
                </SynchronousCommand>
            </FirstLogonCommands>
        </component>
    </settings>
</unattend>