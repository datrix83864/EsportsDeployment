# LANCache DNS Environment Configuration
# High School Esports LAN Infrastructure
# Generated from config.yaml

# Upstream DNS servers (for non-cached domains)
UPSTREAM_DNS={{ network.dns_primary }} {{ network.dns_secondary }}

# IP address of the cache server
# All cached CDN domains will resolve to this IP
LANCACHE_IP={{ network.lancache_server_ip }}

# Use generic cache (all game CDNs point to same cache)
USE_GENERIC_CACHE=true
DISABLE_BLIZZARD=false
DISABLE_EPICGAMES=false
DISABLE_ORIGIN=false
DISABLE_RIOT=false
DISABLE_STEAM=false
DISABLE_UPLAY=false
DISABLE_WINDOWSUPDATES=false

# Enable specific platforms based on config
{% if games.clients.epic_games.enabled | default(true) %}
DISABLE_EPICGAMES=false
{% else %}
DISABLE_EPICGAMES=true
{% endif %}

{% if games.clients.steam.enabled | default(true) %}
DISABLE_STEAM=false
{% else %}
DISABLE_STEAM=true
{% endif %}

{% if games.clients.riot_client.enabled | default(true) %}
DISABLE_RIOT=false
{% else %}
DISABLE_RIOT=true
{% endif %}

{% if games.clients.battle_net.enabled | default(false) %}
DISABLE_BLIZZARD=false
{% else %}
DISABLE_BLIZZARD=true
{% endif %}

# Cache Microsoft/Windows updates
DISABLE_WINDOWSUPDATES=false

# Enable cache for other platforms
DISABLE_GOG=false
DISABLE_NEXUSMODS=false
DISABLE_SONY=false
DISABLE_NINTENDO=false

# Organization info (for logging)
CACHE_DOMAINS_REPO=https://github.com/uklans/cache-domains.git
CACHE_DOMAINS_BRANCH=master

# Timezone
TZ={{ ansible_date_time.tz | default('America/New_York') }}